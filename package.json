{
  "name": "perishable-inventory",
  "version": "1.0.0",
  "description": "Inventory for perishable items",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/bin/www.js",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node ./src/bin/www.ts",
    "clean": "rimraf dist",
    "build": "tsc --build",
    "create-db": "npx sequelize-cli db:create",
    "drop-db": "npx sequelize-cli db:drop",
    "migrate": "npx sequelize-cli db:migrate",
    "drop-tables": "npx sequelize-cli db:migrate:undo:all",
    "test-db": "npm-run-all drop-tables migrate",
    "test": "set NODE_ENV=test&& npm run test-db &&nyc --reporter=text mocha --require ts-node/register 'tests/**/**spec.ts' --timeout 480000",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UggoPrince/perishable-inventory.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UggoPrince/perishable-inventory/issues"
  },
  "homepage": "https://github.com/UggoPrince/perishable-inventory#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "log4js": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "rimraf": "^3.0.2",
    "sequelize": "^7.0.0-alpha.3",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.3.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
